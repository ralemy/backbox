<?xml version="1.0" encoding="UTF-8"?>
<ContentPage AutomationId="SettingsPage" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="associator.Pages.SettingsPage">
	<ContentPage.Content>
        <TableView Intent="Settings">
            <TableView.Root>
                <TableSection Title="Backend Server">
                    <SwitchCell Text="Use Https" On="{Binding UseHttps}" AutomationId="UseHttpsSwitch"/>
                </TableSection>
            </TableView.Root>
        </TableView>
	</ContentPage.Content>
</ContentPage>
